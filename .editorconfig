# EditorConfig is awesome: http://EditorConfig.org

root = true

[*]
charset = utf-8
indent_style = space

[*.rs]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.toml]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[justfile]
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
